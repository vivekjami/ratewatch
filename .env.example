# RateWatch Environment Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=8081
RUST_LOG=info

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# Security Configuration (REQUIRED - CHANGE IN PRODUCTION!)
API_KEY_SECRET=change-this-to-a-secure-random-string-minimum-32-characters

# Optional: Rate Limiting Defaults
DEFAULT_RATE_LIMIT=1000
DEFAULT_WINDOW=3600

# Optional: Dashboard Configuration
DASHBOARD_TITLE="RateWatch Analytics"
DASHBOARD_REFRESH_INTERVAL=5000

# Optional: Analytics Configuration
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_AGGREGATION_INTERVAL=60

# Optional: GDPR Configuration
GDPR_AUTO_DELETION_DAYS=90
GDPR_CONTACT_EMAIL=privacy@yourcompany.com

# Production Settings (uncomment for production)
# RUST_LOG=warn
# ENABLE_METRICS=true
# METRICS_PORT=9090
